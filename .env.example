# Real-ESRGAN Ultimate Configuration File
# Copy this to .env and modify values as needed

# Directory Configuration
REALESRGAN_INPUT_DIR=inputs
REALESRGAN_OUTPUT_DIR=outputs
REALESRGAN_WEIGHTS_DIR=Real-ESRGAN/weights
REALESRGAN_BACKUPS_DIR=backups

# File Configuration
REALESRGAN_CONFIG_FILE=settings.json
REALESRGAN_PRESETS_FILE=presets.json
REALESRGAN_LOG_FILE=realesrgan_app.log

# Server Configuration
REALESRGAN_SERVER_NAME=0.0.0.0
REALESRGAN_SERVER_PORT=8081
REALESRGAN_SHARE=true

# Logging
REALESRGAN_LOG_LEVEL=INFO

# Feature Flags
REALESRGAN_ENABLE_FACE_ENHANCEMENT=true
REALESRGAN_ENABLE_VIDEO_PROCESSING=true
REALESRGAN_ENABLE_BATCH_PROCESSING=true
REALESRGAN_VERIFY_MODEL_CHECKSUMS=true

# GPU/CUDA Settings
REALESRGAN_GPU_MEMORY_RESERVE=0.1
REALESRGAN_ENABLE_MEMORY_OPTIMIZATION=true

# Input Validation
REALESRGAN_MAX_IMAGE_SIZE_MB=100
REALESRGAN_MAX_VIDEO_SIZE_MB=1000
